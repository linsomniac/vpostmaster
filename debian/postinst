#! /bin/sh
# postinst script for vpostmaster
#
# see: dh_installdeb(1)

#set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
        [ "`postconf -h mail_name`" = Postfix ] && \
                postconf -e mail_name=vPostMaster
        /bin/grep -q 'imap_server_type.*fcourier' \
                /etc/squirrelmail/config_local.php
        if [ "$?" -ne 0 ]; then
            echo '$imap_server_type = "courier";' >> \
                    /etc/squirrelmail/config_local.php
        fi
        /bin/grep -q 'optional_delimiter.*\.' \
                /etc/squirrelmail/config_local.php
        if [ "$?" -ne 0 ]; then
            echo '$optional_delimiter = ".";' >> \
                   /etc/squirrelmail/config_local.php
        fi
        /bin/grep -q 'default_folder_prefix.*""' \
                /etc/squirrelmail/config_local.php
        if [ "$?" -ne 0 ]; then
            echo '$default_folder_prefix = "";' >> \
                    /etc/squirrelmail/config_local.php
        fi

        SPOOLDIR=/var/spool/vpostmaster
        if [ -d "$SPOOLDIR" ]; then
            /bin/chown vpostmaster "$SPOOLDIR"
            /bin/chmod 700 "$SPOOLDIR"
        fi
        SPOOLDOM="$SPOOLDIR"/domains
        if [ -d "$SPOOLDOM" ]; then
            /bin/chown vpostmaster "$SPOOLDOM"
            /bin/chmod 700 "$SPOOLDOM"
        fi 

        #  apply any needed database updates if upgrading
        DBEXIST=`/bin/su postgres -c \
                "cd /tmp; psql -d vpostmaster -At -c 'SELECT count(*) FROM meta'" \
                2>/dev/null`
        /etc/init.d/postfix stop
        if [ "$DBEXIST" = 1 ]; then
            /bin/su postgres -c \
                    "/usr/lib/vpostmaster/bin/vpm-dbupgrade --force"
        fi
        /etc/init.d/postfix start
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


